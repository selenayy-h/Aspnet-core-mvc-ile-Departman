@using ProjeCore.Models
@model List<Birim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<h1>Index</h1>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var x in Model)
    {

        <tr>
            <td>@x.BirimID</td>
            <td>@x.BirimAd</td>
            <td><a href="/Default/BirimSil/@x.BirimID" class="btn btn-danger">Sil</a></td>
            @*          departController1 içinde bulunan departsilr gidiceksin gidicek ama nasıl bir id ile pekin bu id yi nereden alacaksın @x. id den*@
            <td><a href="/Default/BirimGetir/@x.BirimID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Default/BirimDetay/@x.BirimID" class="btn btn-default" style="background-color:#dee61d">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/Default/YeniBirim" class="btn btn-primary">Yeni Birim</a>

