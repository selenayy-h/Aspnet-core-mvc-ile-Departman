@model ProjeCore.Models.Personel
@{
    ViewData["Title"] = "YeniPersonel";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<h1>YeniPersonel</h1>

<form class="form-group" method="post">
    @*    @Html.LabelFor(x=>x.departmanad) illa aşğıdaki yazıyı bunun gibi yazmamıza gerek yok düz yazılabilir*@
    <b>Personel Adı</b>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })

    <b>Personel Soyadı</b>
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })


    <b>Personel Şehri </b>
    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })

    <b>Birim </b>
    @Html.DropDownListFor(x => x.Birim.BirimID, (List<SelectListItem>)ViewBag.dgr ,new { @class = "form-control" })




    <button class="btn btn-info">Personel Ekle </button>




</form>